{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "module": "NodeNext",           // ⚠️ Cambiar a NodeNext
    "target": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext"  // debe coincidir con module
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
